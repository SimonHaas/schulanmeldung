{% extends 'base-admin.html.twig' %}

{% block title %}Offene Registrierungen!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div>
        <a href="{{ path('admin') }}">Zurück zur Verwaltung...</a>
    </div>
    <div>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>Schüler</th>
                <th>Anmeldung am</th>
                <th>Mitteilung</th>
                <th>Aktionen</th>
            </tr>
            </thead>
            <tbody>
            {% for entry in registrations %}
                <tr>
                    <td>{{ entry.id }}</td>
                    <td>{{ entry.schueler.nachname }}, {{ entry.schueler.vorname }}</td>
                    <td>{{ entry.datum | date('d.m.Y') }}</td>
                    <td>{{ entry.mitteilung }}</td>
                    <td>
                        {{ include('registrierung/_delete_form.html.twig', {'registrierung': entry}) }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


</div>
{% endblock %}
