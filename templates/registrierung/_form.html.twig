{% if check is not defined %}
    {% set check = false %}
{% endif %}

{{ form_start(form) }}
    {{ form_widget(form) }}
    {% if check %}
        <p>Hier soll ein Button hin um die Daten der Registrierung nochmal bearbeiten zu können. An dieser Stelle sollte kein 'richtiges' Formular sein, nur eine Übersicht.</p>
    {% else %}
        <button class="btn">{{ button_label|default('Save') }}</button>
    {% endif %}
{{ form_end(form) }}
