{% extends 'base.html.twig' %}

{% block title %}Beruf index{% endblock %}

{% block body %}
    <h1>Beruf index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Bezeichnung</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for beruf in berufs %}
            <tr>
                <td>{{ beruf.id }}</td>
                <td>{{ beruf.bezeichnung }}</td>
                <td>
                    <a href="{{ path('beruf_show', {'id': beruf.id}) }}">show</a>
                    <a href="{{ path('beruf_edit', {'id': beruf.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('beruf_new') }}">Create new</a>
{% endblock %}
