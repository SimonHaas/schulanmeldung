{% extends 'base-admin.html.twig' %}


{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h3 class="headlineFont">Bitte melden Sie sich an.</h3>
        <div class="row">
            <div class="col-sm-6">
                <label for="inputEmail" class="sr-only">bbb</label>
                <label class="labelFont">Email</label>
                <input type="email" value="{{ email }}" name="email" id="inputEmail" class="form-control" placeholder="Email"
                       required autofocus>
            </div>
            <div class="col-sm-6">
                <label for="inputPassword" class="sr-only">Password</label>
                <label class="labelFont">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
            </div>
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}">

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}
        <br>
        <div class="row">
            <div class="col">
                <button class="btn btn-block buttonFont controlButton" type="submit">Einloggen</button>
            </div>
        </div>

    </form>
{% endblock %}
