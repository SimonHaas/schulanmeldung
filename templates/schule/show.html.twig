{% extends 'base.html.twig' %}

{% block title %}Schule{% endblock %}

{% block body %}
    <h1>Schule</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ schule.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ schule.name }}</td>
            </tr>
            <tr>
                <th>Art</th>
                <td>{{ schule.art }}</td>
            </tr>
            <tr>
                <th>Strasse</th>
                <td>{{ schule.strasse }}</td>
            </tr>
            <tr>
                <th>Hausnummer</th>
                <td>{{ schule.hausnummer }}</td>
            </tr>
            <tr>
                <th>Ort</th>
                <td>{{ schule.ort }}</td>
            </tr>
            <tr>
                <th>Plz</th>
                <td>{{ schule.plz }}</td>
            </tr>
            <tr>
                <th>IstVerifiziert</th>
                <td>{{ schule.istVerifiziert ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('schule_index') }}">back to list</a>

    <a href="{{ path('schule_edit', {'id': schule.id}) }}">edit</a>

    {{ include('schule/_delete_form.html.twig') }}
