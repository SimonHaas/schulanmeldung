{% extends 'base.html.twig' %}

{% block title %}Kontaktperson index{% endblock %}

{% block body %}
    <h1>Kontaktpersonen</h1>


    <table class="table">
        <thead>
            <tr>
                <th>Anrede</th>
                <th>Vorname</th>
                <th>Nachname</th>
                <th>Str.</th>
                <th>Hausnr</th>
                <th>Plz.</th>
                <th>Ort</th>
                <th>Telefonnr</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
        {% for kontaktperson in kontaktpeople %}
            <tr>
                <td>{{ kontaktperson.anrede }}</td>
                <td>{{ kontaktperson.vorname }}</td>
                <td>{{ kontaktperson.nachname }}</td>
                <td>{{ kontaktperson.strasse }}</td>
                <td>{{ kontaktperson.hausnummer }}</td>
                <td>{{ kontaktperson.plz }}</td>
                <td>{{ kontaktperson.ort }}</td>
                <td>{{ kontaktperson.telefonnummer }}</td>
                <td>{{ kontaktperson.email }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="row">
        <div class="col-lg-12">
            <a class="btn BayreuthButton buttonFont blankLinkButton pull-left" href="{{ path('kontaktperson_new') }}">Create new</a>
            <a class="btn BayreuthButton buttonFont blankLinkButton float-right" href="{{ path('vorbildung_index') }}">Weiter</a>
        </div>
    </div>

{% endblock %}
